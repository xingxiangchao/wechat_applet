/**index.wxss**/

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 90rpx;
  background: #3798d6;
  position: fixed;
  top: 0;
  z-index: 1;
}

.swiper-tab-list {
  display: inline-block;
  width: 14%;
  font-size: 30rpx;
  color: #a2ceeb;
}

.on {
  color: #fff;
  position: relative;
}

.on:after {
  content: "";
  position: absolute;
  left: 30rpx;
  bottom: 10rpx;
  width: 80%;
  height: 0;
  transform: scale(0.5);
  transform-origin: left top;
  border-bottom: 8rpx solid #a2ceeb;
}

.swiper-content {
  margin-top: 90rpx;
}

.hot-news {
  height: 11rem;
  padding: 30rpx;
  background: #f5f5f5;
  position: relative;
}

.hot-news-image {
  display: block;
  width: 100%;
  height: 11rem;
}

.hot-news-info {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  padding: 10rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
}

.hot-news-title {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.news-source {
  font-size: 28rpx;
  color: #808080;
}

.m-r-0 {
  margin-right: 0;
}

.m-r-20 {
  margin-right: 20rpx;
}

.news-list {
  display: flex;
  padding: 30rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
  padding-bottom: 40rpx;
}
.news-list:last-child{
  margin-bottom: 65rpx;
}

.news-list-info {
  flex: 1;
  width: 100%;
  overflow: hidden;
}

.news-list-title{
  font-size: 30rpx;
}

.news-list-thumb {
  width: 200rpx;
  height: 160rpx;
  margin-left: 0.6rem;
}

.news-list-img {
  width: 200rpx;
  height: 160rpx;
}

.no-data {
  font-size: 30rpx;
  margin-top: 30rpx;
  text-align: center;
}